<%- include('partials/header.ejs') %>

<div class="container login">
  <div class="box ">
    <div class="row row-1">
      <div class="col-12 text-center">
        <h1 class="icon mb-3">
          <i class="fa-brands fa-x-twitter"></i
          ><span class="logo"> twitter</span>
        </h1>
      </div>
    </div>
    <div class="row row-2">
      <div class="col text-center">
        <h5>LOGIN</h5>
        <h5>WELCOME BACK!</h5>
      </div>
    </div>
    <form  action="/login"   method="post"  class="row  justify-content-center">
      <div class="col-md-7">
        <label for="inputEmail4" class="form-label"><i class="fa-regular fa-envelope"></i> Email</label>
        <input type="email" class="form-control" id="inputEmail4" name="username" />
      </div>
      <div class="col-md-7">
        <label for="inputPassword4" class="form-label"><i class="fa-solid fa-key"></i> Password</label>
        <input type="password" class="form-control" id="inputPassword4" name="password"/>
      </div>
      <div class="col-md-7 d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
    </form>
    <div class=" row justify-content-center">
     <div class="col-7">
      <p> <a href="/register">
        New user? click here to register.
      </a></p>
     </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs')%>
