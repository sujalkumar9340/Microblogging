<%- include('partials/header.ejs') %>


<style>
li{
  list-style: none;
}
#x-logo{
  font-size: 23px;
}
</style>

<section class="tweets-section p-3">
  <button class="btn btn-primary m-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
    <i class="fa-solid fa-bars"></i>
  </button>
   <span id="x-logo"><i class=" ps-5  fa-brands fa-x-twitter"></i></span>
  <div class="offcanvas offcanvas-start " id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasExampleLabel"><i class=" ps-5  fa-brands fa-x-twitter"></i></h5>
    </div>
    <div class="offcanvas-body">
      <div>
        <ul id="sidebarlist">
          
          <li class="mb-5 mt-2"> <a href="/tweets"><i class="fa-solid fa-house"><span class="ps-2 mb-5">home</span></i></a></li>
        
          <li class="mb-5">  <i class="fa-solid fa-magnifying-glass pd-s-2"></i>  <span class="ps-2">search</span></li>
          <li class="mb-5"> <a href="/profile"><i class="fa-solid fa-user"></i><span class="ps-2">profile</span></a></li>
          <li > <a href="/logout"><i class="fa-solid fa-arrow-right-to-bracket pd-s-2"></i>  <span class="ps-2">logout</span></a> </li>
       
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-4 ">
        <div class="card" >
          <img src="https://pub-static.fotor.com/assets/bg/aa4d0804-a2ac-43ea-a7ae-e6b39d0a5d91.jpg" class="card-img-top" alt="..background.img." />
          <div class="card-body">
            <p class="card-text">
              Welcome!
            </p>
            <h2 class="card-title"> hi,<%= user.name %></h2>

            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
        </div>
        <div class="mt-3">      

</div>
      </div>
     
       <div class="col-8">
        <form action="/share" method="post" class="row  justify-content-center">
            <div class="col-md-12">
                <textarea class="form-control" id="exampleFormControlTextarea1" name="Tweet" rows="3" placeholder="how are u felling today share with us ?"></textarea>
              </div>
            <div class="col-md-12 d-flex justify-content-end ">
              <!-- <a href="/share"class="btn btn-primary mt-2">share</a> -->
              <button type="submit" class="btn btn-primary mt-2">share</button>
            </div>
          </form>
          <!-- <%let length=user.Tweets.length %> -->
          <% for( let i= user.Tweets.length - 1;i>=0; i--){ %>
          <div class="card mt-5">
            <div class="card-body">
              <h5 class="card-title"><%=user.name  %></h5>
              <p class="card-text"><%=user.Tweets[i].content%></p> 
               </div> 
               <div class="date d-flex justify-content-end ">
                <h5><%= user.Tweets[i].timestamp%></h5>
            </div>           
            </div>
           
          <%}%>
         
          
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs')%>
